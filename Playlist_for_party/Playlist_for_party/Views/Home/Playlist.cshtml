@using WebApp_Data.Models.Music
@model WebApp_Data.Models.Music.Playlist
@{
    ViewData["Title"] = "Playlist";
    Layout = "_Layout";
}

@section Styles{
    <link href="~/css/Playlist.css" rel="stylesheet" type="text/css"/>
}

<section class="section">
    <h2 class="section-title">Все треки</h2>
    <div class="section-body">
        @if (Model.Tracks.Any())
        {
            @foreach (var item in Model.Tracks.Where(i => i.GetType() == typeof(Track)))
            {
                <div class="card m-1" style="width:200px;">
                    <div class="card-body">
                        <img style="color: #a2ded8" src="@Html.DisplayFor(modelItem => item.ImageUrl)" width="150" height="150" alt="Release picture"/>
                        <h6 class="card-subtitle mb-2 text-muted" style="color: #a2ded8">@Html.DisplayFor(modelItem => item.Name)</h6>
                        <a href="@Html.DisplayFor(modelItem => item.Href)" target="_blank">Listen</a>
                    </div>
                </div>
            }
        }
        else
        {
            <p style="color: white">No data available</p>
        }
    </div>
</section>