@using WebApp_Data.Models.Music
@{
    ViewData["Title"] = "Home";
}
@inject IEnumerable<Playlist> PlaylistsAsOwner;
@inject IEnumerable<Playlist> PlaylistsAsRedactor;
@{
    PlaylistsAsOwner = ViewBag.PlaylistsAsOwner;
    PlaylistsAsRedactor = ViewBag.PlaylistsAsRedactor;
}
@section Styles{
    <link href=@Url.Content("~/css/Home.css") rel="stylesheet" type="text/css"/>
}

<section class="section">
    <h2 class="section-title">Плейлисты где вы создатель</h2>

    <div class="section-body">
        @if (PlaylistsAsOwner.Any())
        {
            @foreach (var playlist in PlaylistsAsOwner)
            {
                <div class="card m-1" style="width:200px;">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted" style="color: #a2ded8">@playlist.Name</h6>
                        <a asp-controller="Home" asp-action="Playlist" asp-route-id="@playlist.PlaylistId">
                            <p class="card-text" style="color: #a2ded8">@playlist.PlaylistId</p>
                        </a>
                    </div>
                </div>
                foreach (var track in playlist.Tracks)
                {
                    <div class="track">
                        <div class="trackInfo">
                            <a href=@track.Href>
                                <img src="@track.ImageUrl" alt="Track picture">
                            </a>
                        </div>
                        <div class="track-content">
                            <div class="trackName">@track.Name</div>
                            <div class="artist">@track.Artist</div>
                        </div>
                    </div>
                }
            }
        }
        else
        {
            <p style="color: white">No data available</p>
        }
    </div>
    
    <h2 class="section-title">Плейлисты где вы редактор</h2>
    
        <div class="section-body">
            @if (PlaylistsAsRedactor.Any())
            {
                @foreach (var playlist in PlaylistsAsRedactor)
                {
                    <div class="card m-1" style="width:200px;">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted" style="color: #a2ded8">@playlist.Name</h6>
                            <a asp-controller="Home" asp-action="Playlist" asp-route-id="@playlist.PlaylistId">
                                <p class="card-text" style="color: #a2ded8">@playlist.PlaylistId</p>
                            </a>
                        </div>
                    </div>
                    foreach (var track in playlist.Tracks)
                    {
                        <div class="track">
                            <div class="trackInfo">
                                <a href=@track.Href>
                                    <img src="@track.ImageUrl" alt="Track picture">
                                </a>
                            </div>
                            <div class="track-content">
                                <div class="trackName">@track.Name</div>
                                <div class="artist">@track.Artist</div>
                            </div>
                        </div>
                    }
                }
            }
            else
            {
                <p style="color: white">No data available</p>
            }
        </div>
</section>

