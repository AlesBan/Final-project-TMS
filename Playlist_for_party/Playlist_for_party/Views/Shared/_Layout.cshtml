<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    @await RenderSectionAsync("Styles", false)
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
          rel="stylesheet">

    <title>@ViewData["Title"]</title>
</head>
<body>
<div class="sidebar">
    <div class="logo">
        <a href="#">
            <img src="https://storage.googleapis.com/pr-newsroom-wp/1/2018/11/Spotify_Logo_CMYK_Green.png" alt="Logo"/>
        </a>
    </div>
    <div class="menu">
        <ul>
            <li>
                <a class="menu-item" asp-controller="Home" asp-action="Home">Главная</a>
            </li>

            <li>
                <a class="menu-item" asp-controller="Home" asp-action="Search">Поиск</a>
            </li>

            <li>
                <a class="menu-item" asp-controller="Home" asp-action="Playlist">Плейлист</a>
            </li>
        </ul>
    </div>
</div>

<div class="header">
    @await RenderSectionAsync("SearchDiv", false)
    <div class="dropdown">
        <button class="dropdown-button" id="open-search-form">
            <span class="user-icon">
                <i class="user"></i>
            </span>
            <span class="text-bold">
                username
            </span>
            <span>
                <i class="chevron-down"></i>
            </span>
        </button>
        <ul class="dropdown-content" id="open-dropdown">
            <div>Account</div>
            <div>Logout</div>
        </ul>
    </div>
</div>

<main>
    @RenderBody()
</main>
</body>
@await RenderSectionAsync("Scripts", false)
</html>